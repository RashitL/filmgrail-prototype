@using System.Web.Optimization
@{
    var bundles = BundleTable.Bundles;

    bundles.Add(new ScriptBundle("~/bundles/vendor").Include(
               
        "~/Scripts/jquery/jquery-{version}.js",
                "~/Scripts/jquery/jquery-ui-{version}.js",
                "~/Scripts/jquery/jquery.unobtrusive*",
                "~/Scripts/jquery/jquery.validate*",
                "~/Scripts/jquery-te-1.4.0.min.js",
                "~/Scripts/jquery/jquery.signalR.js",
                "~/Scripts/linq/linq.js",
                "~/Scripts/angular/angular.js",
                "~/Scripts/angular/angular-animate.js",
                "~/Scripts/angular/angular-cookies.js",
                "~/Scripts/angular/angular-loader.js",
                "~/Scripts/angular/angular-mocks.js",
                "~/Scripts/angular/angular-route.js",
                "~/Scripts/angular/angular-sanitize.js",
                "~/Scripts/angular/angular-touch.js",
                "~/Scripts/angular/angular-resource.js",
                "~/Scripts/angular/placeholders-0.0.1-SNAPSHOT.js",
                "~/Scripts/toastr/toastr.js",
                "~/Scripts/angular-ui/angular-ui-ieshiv.js",
                "~/Scripts/angular-ui/angular-ui.js",
                "~/Scripts/angular-ui/ui-utils-ieshiv.js",
                "~/Scripts/angular-ui/ui-utils.js",
                "~/Scripts/angular-ui/angular-ui-router.js",
                "~/Scripts/angular-ui/angular-ui.js",
                "~/Scripts/angular-ui/ui-bootstrap-tpls-0.10.0.js",
                "~/Scripts/angular-ui/angular-scrolly.js",
                "~/Scripts/angular-ui/elastic.js",
                "~/Scripts/angular-ui/formstamp.js",
                "~/Scripts/angular-ui/angular-file-upload.js",
                "~/Scripts/angular-ui/select2.js",
                "~/Scripts/bootstrap/bootstrap.js",   
                "~/Scripts/fastClick.js",
                "~/Scripts/ng-tags-input.js",
                "~/Scripts/loading-bar.js",
                "~/Scripts/abn_tree_directive.js",
                "~/Scripts/modernizr-*",
                "~/Scripts/select2.js",
                "~/Scripts/tinycon.min.js"
                ));


    bundles.Add(new ScriptBundle("~/bundles/app").Include(
                "~/app/js/*.js",
                "~/app/js/controllers/*.js",
                "~/app/js/services/*.js"
                ));


    bundles.Add(new StyleBundle("~/Content/vendor").Include(
        "~/Content/bootstrap/bootstrap.css",
        "~/Content/bootstrap/bootstrap-theme.css",
        "~/Content/bootstrap/font-awesome.css",
        "~/Content/toastr/toastr.css",
        "~/Content/angular-ui/angular-ui.css",
        "~/Content/angular-ui/formstamp.css",
        "~/Content/select/*.css",
        "~/Content/*.css"
        ));

    bundles.Add(new StyleBundle("~/Content/app").Include(
        "~/app/css/*.css"));
}